<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.getStarted.GetStartedActivity">

  <ImageView
      android:layout_width="@dimen/logo_width"
      android:layout_height="@dimen/logo_height"
      android:layout_margin="@dimen/margin_32dp"
      android:src="@drawable/temp_logo"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="ContentDescription" />

  <TextView
      style="@style/TextViewXXL"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/margin_16dp"
      android:text="@string/temp_getStarted_1"
      app:layout_constraintBottom_toTopOf="@id/getStarted_tv_desc"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent" />

  <TextView
      android:id="@+id/getStarted_tv_desc"
      style="@style/TextViewM"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/margin_32dp"
      android:layout_marginEnd="@dimen/margin_32dp"
      android:layout_marginBottom="@dimen/margin_16dp"
      android:text="@string/temp_getStarted_2"
      app:layout_constraintBottom_toTopOf="@id/getStarted_view_background"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent" />

  <View
      android:id="@+id/getStarted_view_background"
      android:layout_width="match_parent"
      android:layout_height="@dimen/getStarted_background_height"
      android:background="@drawable/container_rounded_top"
      android:backgroundTint="@color/colorSecondary"
      app:layout_constraintBottom_toBottomOf="parent" />

  <TextView
      android:id="@+id/getStarted_tv_view_desc"
      style="@style/TextViewL.Offset"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/margin_64dp"
      android:layout_marginTop="@dimen/margin_16dp"
      android:layout_marginEnd="@dimen/margin_64dp"
      android:text="@string/by_tapping_get_started_you_agree_to_our_term_amp_policies"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@id/getStarted_view_background" />

  <Button
      android:id="@+id/getStarted_btn_getStarted"
      style="@style/ButtonPrimary"
      android:layout_width="match_parent"
      android:layout_marginStart="@dimen/margin_16dp"
      android:layout_marginTop="@dimen/margin_32dp"
      android:layout_marginEnd="@dimen/margin_16dp"
      android:text="@string/get_started"
      app:layout_constraintTop_toBottomOf="@id/getStarted_tv_view_desc" />

  <TextView
      android:id="@+id/getStarted_tv_view_privacy_desc"
      style="@style/TextViewL.Offset"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_16dp"
      android:text="@string/appVno_2020"
      app:layout_constraintEnd_toStartOf="@+id/getStarted_tv_view_privacy"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/getStarted_btn_getStarted" />

  <TextView
      android:id="@+id/getStarted_tv_view_privacy"
      style="@style/TextViewL.Offset"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/margin_8dp"
      android:onClick="@{() -> click.attachListener()}"
      android:text="@string/temp_privacy_policy_underlined"
      app:layout_constraintEnd_toEndOf="@+id/getStarted_view_background"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintStart_toEndOf="@+id/getStarted_tv_view_privacy_desc"
      app:layout_constraintTop_toTopOf="@id/getStarted_tv_view_privacy_desc" />

</androidx.constraintlayout.widget.ConstraintLayout>
