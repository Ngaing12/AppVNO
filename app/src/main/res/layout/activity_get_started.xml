<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".getStarted.GetStartedActivity">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:src="@drawable/temp_sample_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/temp_getStarted_1"
        android:textAlignment="center"
        android:textColor="@color/colorTextNormal"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_desc_getStarted"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_desc_getStarted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:text="@string/temp_getStarted_2"
        android:textAlignment="center"
        android:textColor="@color/colorTextNormal"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/view_background_getStarted"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/view_background_getStarted"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/temp_get_started_container"
        app:layout_constraintBottom_toBottomOf="parent" />


    <TextView
        android:id="@+id/tv_view_desc_getStarted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:text="By tapping 'Get Started' you agree to our Term &amp; Policies"
        android:textAlignment="center"
        android:textColor="@color/colorTextOffset"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_background_getStarted" />

    <Button
        android:id="@+id/btn_start_getStarted"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/temp_round_button_orange"
        android:text="Get Started"
        android:textColor="@color/colorTextOffset"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_view_desc_getStarted" />


    <TextView
        android:id="@+id/tv_view_privacy_desc_getStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="\@2020 AppVNO."
        android:textAlignment="center"
        android:textColor="@color/colorTextOffset"
        android:textSize="15sp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@+id/tv_view_privacy_getStarted"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_start_getStarted" />

    <TextView
        android:id="@+id/tv_view_privacy_getStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/temp_privacy_policy"
        android:textAlignment="center"
        android:textAppearance="@style/Widget.AppCompat.Spinner.Underlined"
        android:textColor="@color/colorTextOffset"
        android:textSize="15sp"
        android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toEndOf="@+id/view_background_getStarted"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_view_privacy_desc_getStarted"
        app:layout_constraintTop_toBottomOf="@id/btn_start_getStarted" />

</androidx.constraintlayout.widget.ConstraintLayout>