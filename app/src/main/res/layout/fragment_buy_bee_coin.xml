<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".ui.shop.beeCoin.BuyBeeCoinFragment">


  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/freeBeeHomeBg">

    <ImageView
        android:id="@+id/img_toolbar_bg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/container_bottom_rounded"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar" />

    <View
        android:id="@+id/view_container"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:background="@drawable/container_three_rounded"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/tv_contentTitle"
        style="@style/FreeBeeHH2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_32dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_32dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:text="@string/select_number_bee_coins_to_purchase"
        app:layout_constraintLeft_toLeftOf="@id/view_container"
        app:layout_constraintRight_toRightOf="@id/view_container"
        app:layout_constraintTop_toTopOf="@id/view_container" />

    <TextView
        android:id="@+id/tv_desc1"
        style="@style/FreeBeeHP3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:text="@string/what_are_bee_coins"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="@id/view_container"
        app:layout_constraintRight_toRightOf="@id/view_container"
        app:layout_constraintTop_toBottomOf="@id/tv_contentTitle" />

    <View
        android:id="@id/card_1"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:background="@drawable/bee_coin_banner"
        app:layout_constraintLeft_toLeftOf="@id/view_container"
        app:layout_constraintRight_toRightOf="@id/view_container"
        app:layout_constraintTop_toBottomOf="@id/tv_desc1" />

    <TextView
        android:id="@+id/tv_desc2"
        style="@style/FreeBeeHH3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:text="@string/bee_coins_balance"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@id/card_1"
        app:layout_constraintRight_toRightOf="@id/card_1"
        app:layout_constraintTop_toTopOf="@id/card_1" />

    <TextView
        android:id="@+id/tv_coinBalance"
        style="@style/FreeBeeUH1.Offset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1000.00"
        android:textAlignment="center"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@id/card_1"
        app:layout_constraintLeft_toLeftOf="@id/card_1"
        app:layout_constraintRight_toRightOf="@id/card_1"
        app:layout_constraintTop_toBottomOf="@id/tv_desc2" />

    <!-- Coin 1 -->
    <View
        android:id="@+id/card_2"
        android:layout_width="0dp"
        android:layout_height="@dimen/card_height_100dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:background="@drawable/container_rounded"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_container" />

    <ImageView
        android:id="@+id/img_coin1"
        android:layout_width="@dimen/icon_size_76dp"
        android:layout_height="@dimen/icon_size_76dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:src="@drawable/ic_coin_steel"
        app:layout_constraintBottom_toBottomOf="@id/card_2"
        app:layout_constraintLeft_toLeftOf="@id/card_2"
        app:layout_constraintTop_toTopOf="@id/card_2" />

    <TextView
        android:id="@+id/tv_desc3"
        style="@style/FreeBeeHH2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_32dp"
        android:layout_marginRight="@dimen/margin_32dp"
        android:text="@string/_500_bee_coins"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/tv_price1"
        app:layout_constraintLeft_toRightOf="@id/img_coin1"
        app:layout_constraintRight_toRightOf="@id/card_2"
        app:layout_constraintTop_toTopOf="@id/card_2"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_price1"
        style="@style/FreeBeeHP4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4dp"
        android:text="USD 10.00"
        android:textColor="@color/freeBeeColorCardProfile"
        app:layout_constraintBottom_toBottomOf="@id/card_2"
        app:layout_constraintLeft_toLeftOf="@id/tv_desc3"
        app:layout_constraintTop_toBottomOf="@id/tv_desc3" />

    <Button
        android:id="@+id/btn_coin1"
        style="@style/FreeBeeButtonTertiarySmall"
        android:text="Buy"
        android:textStyle="bold"
        android:layout_marginRight="@dimen/margin_4dp"
        android:layout_marginBottom="@dimen/margin_4dp"
        app:layout_constraintBottom_toBottomOf="@id/card_2"
        app:layout_constraintRight_toRightOf="@id/card_2" />

    <!-- Coin 2 -->
    <View
        android:id="@+id/card_3"
        android:layout_width="0dp"
        android:layout_height="@dimen/card_height_100dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:background="@drawable/container_rounded"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_2" />

    <ImageView
        android:id="@+id/img_coin2"
        android:layout_width="@dimen/icon_size_76dp"
        android:layout_height="@dimen/icon_size_76dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:src="@drawable/ic_coin_iron"
        app:layout_constraintBottom_toBottomOf="@id/card_3"
        app:layout_constraintLeft_toLeftOf="@id/card_3"
        app:layout_constraintTop_toTopOf="@id/card_3" />

    <TextView
        android:id="@+id/tv_desc4"
        style="@style/FreeBeeHH2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_32dp"
        android:layout_marginRight="@dimen/margin_32dp"
        android:text="@string/_1000_bee_coins"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/tv_price2"
        app:layout_constraintLeft_toRightOf="@id/img_coin2"
        app:layout_constraintRight_toRightOf="@id/card_3"
        app:layout_constraintTop_toTopOf="@id/card_3"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_price2"
        style="@style/FreeBeeHP4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4dp"
        android:text="USD 10.00"
        android:textColor="@color/freeBeeColorCardProfile"
        app:layout_constraintBottom_toBottomOf="@id/card_3"
        app:layout_constraintLeft_toLeftOf="@id/tv_desc4"
        app:layout_constraintTop_toBottomOf="@id/tv_desc4" />

    <Button
        android:id="@+id/btn_coin2"
        style="@style/FreeBeeButtonTertiarySmall"
        android:text="Buy"
        android:layout_marginRight="@dimen/margin_4dp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/margin_4dp"
        app:layout_constraintBottom_toBottomOf="@id/card_3"
        app:layout_constraintRight_toRightOf="@id/card_3" />

    <!-- Coin 3 -->
    <View
        android:id="@+id/card_4"
        android:layout_width="0dp"
        android:layout_height="@dimen/card_height_100dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:background="@drawable/container_rounded"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_3" />

    <ImageView
        android:id="@+id/img_coin3"
        android:layout_width="@dimen/icon_size_76dp"
        android:layout_height="@dimen/icon_size_76dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:src="@drawable/ic_coin_bronze"
        app:layout_constraintBottom_toBottomOf="@id/card_4"
        app:layout_constraintLeft_toLeftOf="@id/card_4"
        app:layout_constraintTop_toTopOf="@id/card_4" />

    <TextView
        android:id="@+id/tv_desc5"
        style="@style/FreeBeeHH2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_32dp"
        android:layout_marginRight="@dimen/margin_32dp"
        android:text="@string/_1000_bee_coins"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/tv_price3"
        app:layout_constraintLeft_toRightOf="@id/img_coin3"
        app:layout_constraintRight_toRightOf="@id/card_4"
        app:layout_constraintTop_toTopOf="@id/card_4"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_price3"
        style="@style/FreeBeeHP4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4dp"
        android:text="USD 10.00"
        android:textColor="@color/freeBeeColorCardProfile"
        app:layout_constraintBottom_toBottomOf="@id/card_4"
        app:layout_constraintLeft_toLeftOf="@id/tv_desc5"
        app:layout_constraintTop_toBottomOf="@id/tv_desc5" />

    <Button
        android:id="@+id/btn_coin3"
        style="@style/FreeBeeButtonTertiarySmall"
        android:text="Buy"
        android:layout_marginRight="@dimen/margin_4dp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/margin_4dp"
        app:layout_constraintBottom_toBottomOf="@id/card_4"
        app:layout_constraintRight_toRightOf="@id/card_4" />

    <!-- Coin 4 -->
    <View
        android:id="@+id/card_5"
        android:layout_width="0dp"
        android:layout_height="@dimen/card_height_100dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:background="@drawable/container_rounded"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_4" />

    <ImageView
        android:id="@+id/img_coin4"
        android:layout_width="@dimen/icon_size_76dp"
        android:layout_height="@dimen/icon_size_76dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:src="@drawable/ic_coin_gold"
        app:layout_constraintBottom_toBottomOf="@id/card_5"
        app:layout_constraintLeft_toLeftOf="@id/card_5"
        app:layout_constraintTop_toTopOf="@id/card_5" />

    <TextView
        android:id="@+id/tv_desc6"
        style="@style/FreeBeeHH2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_32dp"
        android:layout_marginRight="@dimen/margin_32dp"
        android:text="@string/_1000_bee_coins"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/tv_price4"
        app:layout_constraintLeft_toRightOf="@id/img_coin4"
        app:layout_constraintRight_toRightOf="@id/card_5"
        app:layout_constraintTop_toTopOf="@id/card_5"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_price4"
        style="@style/FreeBeeHP4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4dp"
        android:text="USD 10.00"
        android:textColor="@color/freeBeeColorCardProfile"
        app:layout_constraintBottom_toBottomOf="@id/card_5"
        app:layout_constraintLeft_toLeftOf="@id/tv_desc6"
        app:layout_constraintTop_toBottomOf="@id/tv_desc6" />

    <Button
        android:id="@+id/btn_coin4"
        style="@style/FreeBeeButtonTertiarySmall"
        android:text="Buy"
        android:layout_marginRight="@dimen/margin_4dp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/margin_4dp"
        app:layout_constraintBottom_toBottomOf="@id/card_5"
        app:layout_constraintRight_toRightOf="@id/card_5" />

    <View
        android:id="@+id/view_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_5" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
