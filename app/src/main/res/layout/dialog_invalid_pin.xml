<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/invalid_container_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:background="@drawable/container_rounded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/invalid_end" />

    <ImageView
        android:id="@+id/invalid_img_close"
        android:layout_width="@dimen/icon_size_24dp"
        android:layout_height="@dimen/icon_size_24dp"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginRight="@dimen/margin_24dp"
        android:src="@drawable/ic_close"
        app:layout_constraintRight_toRightOf="@id/invalid_container_content"
        app:layout_constraintTop_toTopOf="@id/invalid_container_content" />

    <ImageView
        android:id="@+id/invalid_img_icon"
        android:layout_width="@dimen/icon_size_160dp"
        android:layout_height="@dimen/icon_size_160dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_invalid_pin"
        app:layout_constraintLeft_toLeftOf="@id/invalid_container_content"
        app:layout_constraintRight_toRightOf="@id/invalid_container_content"
        app:layout_constraintTop_toBottomOf="@id/invalid_img_close" />

    <TextView
        android:id="@+id/invalid_tv_desc1"
        style="@style/FreeBeeHH1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_32dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:layout_marginRight="@dimen/margin_32dp"
        android:text="@string/invalid_pin"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@id/invalid_container_content"
        app:layout_constraintRight_toRightOf="@id/invalid_container_content"
        app:layout_constraintTop_toBottomOf="@id/invalid_img_icon" />

    <TextView
        android:id="@+id/invalid_tv_desc2"
        style="@style/FreeBeeHP2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_32dp"
        android:text="@string/please_check_if_you_ve_entered_the_correct_pin"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@id/invalid_tv_desc1"
        app:layout_constraintRight_toRightOf="@id/invalid_tv_desc1"
        app:layout_constraintTop_toBottomOf="@id/invalid_tv_desc1" />


    <ImageView
        android:id="@+id/invalid_img_help"
        android:layout_width="@dimen/icon_size_24dp"
        android:layout_height="@dimen/icon_size_24dp"
        android:src="@drawable/ic_help"
        android:tint="@color/colorBlack"
        android:layout_marginEnd="@dimen/margin_8dp"
        app:layout_constraintRight_toLeftOf="@id/invalid_tv_needHelp"
        app:layout_constraintTop_toTopOf="@id/invalid_tv_needHelp"
        app:layout_constraintBottom_toBottomOf="@id/invalid_tv_needHelp"/>

    <TextView
        android:id="@+id/invalid_tv_needHelp"
        style="@style/FreeBeeHH3"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/need_help"
        android:layout_marginTop="@dimen/margin_24dp"
        app:layout_constraintLeft_toLeftOf="@id/invalid_container_content"
        app:layout_constraintRight_toRightOf="@id/invalid_container_content"
        app:layout_constraintTop_toBottomOf="@id/invalid_tv_desc2" />

    <View
        android:id="@+id/invalid_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_32dp"
        app:layout_constraintTop_toBottomOf="@id/invalid_tv_needHelp"/>


</androidx.constraintlayout.widget.ConstraintLayout>