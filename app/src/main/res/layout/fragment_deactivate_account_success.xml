<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".ui.account.DeactivateAccountFragment">


  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/freeBeeHomeBg">

    <ImageView
        android:id="@+id/img_toolbar_bg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/container_bottom_rounded"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar" />

    <View
        android:id="@+id/view_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:background="@drawable/container_three_rounded"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/view_end"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />



    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/icon_size_240dp"
        android:layout_height="@dimen/icon_size_240dp"
        android:src="@drawable/ic_deactivate_account"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="@id/view_container"
        android:layout_marginTop="@dimen/margin_64dp"
        app:layout_constraintRight_toRightOf="@id/view_container"
        app:layout_constraintTop_toTopOf="@id/view_container"/>

    <TextView
        android:id="@+id/tv_title"
        style="@style/FreeBeeUH2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/freeBeeCaramel"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginLeft="@dimen/margin_32dp"
        android:layout_marginRight="@dimen/margin_32dp"
        android:text="@string/account_deactivated"
        app:layout_constraintLeft_toLeftOf="@id/view_container"
        app:layout_constraintRight_toRightOf="@id/view_container"
        app:layout_constraintTop_toBottomOf="@id/img_icon" />

    <TextView
        android:id="@+id/tv_desc1"
        style="@style/FreeBeeHP2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/freeBeeCaramel"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginLeft="@dimen/margin_32dp"
        android:layout_marginRight="@dimen/margin_32dp"
        android:text="@string/dummy_text"
        app:layout_constraintLeft_toLeftOf="@id/view_container"
        app:layout_constraintRight_toRightOf="@id/view_container"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <View
        android:id="@+id/view_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_32dp"
        android:layout_marginBottom="@dimen/margin_32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_desc1"
        app:layout_constraintVertical_bias="1.0" />


  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

