<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".ui.shop.beeCoin.BuyBeeCoinSuccessFragment">


  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/freeBeeHomeBg">

    <ImageView
        android:id="@+id/img_toolbar_bg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/container_bottom_rounded"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar" />

    <View
        android:id="@+id/view_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:background="@drawable/container_rounded"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/view_container_end"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <ImageView
        android:id="@+id/view_bg1"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:background="@drawable/buy_success_bg"
        app:layout_constraintLeft_toLeftOf="@id/view_container"
        app:layout_constraintRight_toRightOf="@id/view_container"
        app:layout_constraintTop_toTopOf="@id/view_container" />

    <ImageView
        android:id="@+id/img_coin1"
        android:layout_width="@dimen/icon_size_112dp"
        android:layout_height="@dimen/icon_size_112dp"
        android:layout_marginBottom="@dimen/margin_32dp"
        android:src="@drawable/ic_buy_success_logo"
        app:layout_constraintLeft_toLeftOf="@id/view_container"
        app:layout_constraintRight_toRightOf="@id/view_container"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/tv_desc2"
        style="@style/FreeBeeUH1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/success"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_bg1" />


    <View
        android:id="@+id/card_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/container_three_rounded"
        android:backgroundTint="@color/freeBeeHomeCardBackground1"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginLeft="@dimen/margin_32dp"
        android:layout_marginRight="@dimen/margin_32dp"
        app:layout_constraintBottom_toBottomOf="@id/view_card_end"
        app:layout_constraintRight_toRightOf="@id/view_container"
        app:layout_constraintLeft_toLeftOf="@id/view_container"
        app:layout_constraintTop_toBottomOf="@id/tv_desc2"/>


    <TextView
        android:id="@+id/tv_desc3"
        style="@style/FreeBeeHH3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_16dp"
        android:text="@string/you_ve_purchased"
        app:layout_constraintLeft_toLeftOf="@id/card_1"
        app:layout_constraintRight_toRightOf="@id/card_1"
        app:layout_constraintTop_toTopOf="@id/card_1" />

    <ImageView
        android:id="@+id/img_coin"
        android:src="@drawable/ic_coin_gold"
        android:layout_width="@dimen/icon_size_48dp"
        android:layout_height="@dimen/icon_size_48dp"
        android:layout_marginTop="@dimen/margin_8dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@id/tv_amount"
        app:layout_constraintBottom_toBottomOf="@id/tv_amount"
        app:layout_constraintLeft_toLeftOf="@id/card_1"
        app:layout_constraintRight_toLeftOf="@id/tv_amount"/>

    <TextView
        android:id="@+id/tv_amount"
        style="@style/FreeBeeUH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="45dp"
        android:text="600.00"
        android:layout_marginStart="@dimen/margin_8dp"
        app:layout_constraintLeft_toRightOf="@id/img_coin"
        app:layout_constraintRight_toRightOf="@id/card_1"
        app:layout_constraintTop_toBottomOf="@id/tv_desc3" />

    <TextView
        android:id="@+id/tv_desc4"
        style="@style/FreeBeeHP1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_16dp"
        android:text="@string/they_ve_now_been_credited_into_your_account"
        app:layout_constraintLeft_toLeftOf="@id/card_1"
        app:layout_constraintRight_toRightOf="@id/card_1"
        app:layout_constraintTop_toBottomOf="@id/tv_amount" />

    <View
        android:id="@+id/view_card_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_desc4" />

    <TextView
        android:id="@+id/tv_desc5"
        style="@style/FreeBeeHH3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_24dp"
        android:text="@string/view_my_bee_coins"
        app:layout_constraintLeft_toLeftOf="@id/card_1"
        app:layout_constraintRight_toRightOf="@id/card_1"
        app:layout_constraintTop_toTopOf="@id/view_card_end" />


    <View
        android:id="@+id/view_container_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_desc5" />

    <TextView
        android:id="@+id/tv_desc6"
        style="@style/FreeBeeHP2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/you_can_now_buy_premium_call_plans"
        android:layout_marginTop="@dimen/margin_16dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@id/view_container"
        app:layout_constraintRight_toRightOf="@id/view_container"
        app:layout_constraintTop_toBottomOf="@id/view_container_end" />


    <Button
        android:id="@+id/btn_buy"
        style="@style/FreeBeeButtonPrimary"
        android:layout_marginTop="@dimen/margin_32dp"
        android:text="@string/buy_a_plan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_desc6" />

    <Button
        android:id="@+id/btn_shop"
        style="@style/FreeBeeButtonSecondary"
        android:layout_marginTop="@dimen/margin_16dp"
        android:text="@string/back_to_bee_shop"
        app:layout_constraintLeft_toLeftOf="@id/btn_buy"
        app:layout_constraintRight_toRightOf="@id/btn_buy"
        app:layout_constraintTop_toBottomOf="@id/btn_buy" />

    <View
        android:id="@+id/view_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_shop" />


  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
