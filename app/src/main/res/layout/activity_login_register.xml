<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginRegister.LoginRegisterActivity">


    <ImageView
        android:id="@+id/img_logo_loginRegister"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/temp_sample_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/fragment_container_loginRegister"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/img_logo_loginRegister"
        app:layout_constraintBottom_toTopOf="@id/tv_view_privacy_desc_loginRegister" >
    </FrameLayout>

    <TextView
        android:id="@+id/tv_view_privacy_desc_loginRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@2020 AppVNO."
        android:textAlignment="center"
        android:textColor="@color/colorTextNormal"
        android:textSize="15sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@+id/tv_view_privacy_loginRegister"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_view_privacy_loginRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temp_privacy_policy"
        android:textAlignment="center"
        android:textAppearance="@style/Widget.AppCompat.Spinner.Underlined"
        android:textColor="@color/colorTextNormal"
        android:textSize="15sp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_view_privacy_desc_loginRegister"
        app:layout_constraintTop_toTopOf="@id/tv_view_privacy_desc_loginRegister" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_fingerprint_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundTransparent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_close_login"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/temp_ic_close_gray_24dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Verify your Identity"
           android:textColor="@color/colorWhite"
           android:textStyle="bold"
           android:textSize="24dp"
           android:gravity="center"
           android:layout_marginBottom="16dp"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintBottom_toTopOf="@id/tv_desc_fingerprint_login"/>

        <TextView
            android:id="@+id/tv_desc_fingerprint_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User your fingerprint to verify your identity"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/img_fingerprint_login"/>
        
        <ImageView
            android:id="@+id/img_fingerprint_login"
            android:layout_width="52dp"
            android:layout_height="52dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp"
            android:background="@drawable/temp_ic_fingerprint_gray_24dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>