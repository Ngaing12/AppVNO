<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/freeBeeHomeBg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.shop.ShopFragment">

  <ImageView
      android:id="@+id/img_toolbar_bg"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      app:layout_constraintTop_toTopOf="parent"
      android:src="@drawable/container_bottom_rounded"/>

  <include
      android:id="@+id/toolbar"
      layout="@layout/app_bar" />


  <TextView
      android:id="@+id/tv_contentTitle"
      style="@style/FreeBeeUH1.Offset"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_8dp"
      android:text="@string/what_are_you_shopping_for"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/toolbar" />


  <View
      android:id="@+id/view_sample"
      style="@style/FreeBeeCard3"
      android:layout_width="0dp"
      android:layout_height="100dp"
      android:layout_marginTop="@dimen/margin_32dp"
      android:layout_marginStart="@dimen/margin_16dp"
      android:layout_marginEnd="@dimen/margin_16dp"
      android:background="@drawable/bee_coin_banner"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/img_toolbar_bg" />

  <TextView
      android:id="@+id/tv_sample"
      style="@style/FreeBeeHH1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_8dp"
      android:text='Bee Coins'
      app:layout_constraintLeft_toLeftOf="@id/view_sample"
      app:layout_constraintRight_toRightOf="@id/view_sample"
      app:layout_constraintBottom_toBottomOf="@id/view_sample"
      app:layout_constraintTop_toTopOf="@id/view_sample" />

</androidx.constraintlayout.widget.ConstraintLayout>