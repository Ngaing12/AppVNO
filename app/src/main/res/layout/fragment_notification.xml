<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".ui.notification.NotificationFragment">


  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/freeBeeHomeBg">

    <ImageView
        android:id="@+id/img_toolbar_bg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/container_bottom_rounded"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar" />
    
    <LinearLayout
        android:id="@+id/btn_read"
        style="@style/FreeBeeButtonPrimary"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_clear"
        android:layout_width="0dp"
        android:gravity="center"

        android:orientation="horizontal">
      
      <ImageView
          android:src="@drawable/ic_password_eye"
          android:tint="@color/colorWhite"
          android:layout_marginStart="@dimen/margin_16dp"
          android:layout_width="@dimen/icon_size_24dp"
          android:layout_height="@dimen/icon_size_24dp" />

      <TextView
          style="@style/FreeBeeHP4"
          android:layout_marginStart="@dimen/margin_4dp"
          android:textStyle="bold"
          android:textColor="@color/colorWhite"
          android:text="@string/mark_all_as_read"
          android:layout_marginEnd="@dimen/margin_24dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_clear"
        android:weightSum="1"
        android:layout_marginStart="@dimen/margin_16dp"
        style="@style/FreeBeeButtonPrimary"
        android:layout_marginEnd="@dimen/margin_16dp"
        app:layout_constraintTop_toTopOf="@id/btn_read"
        app:layout_constraintLeft_toRightOf="@id/btn_read"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btn_read"
        android:layout_width="0dp"
        android:gravity="center"
        android:orientation="horizontal">

      <ImageView
          android:src="@drawable/ic_trash"
          android:tint="@color/colorWhite"
          android:layout_marginStart="@dimen/margin_16dp"
          android:layout_width="@dimen/icon_size_24dp"
          android:layout_height="@dimen/icon_size_24dp" />

      <TextView
          style="@style/FreeBeeHP4"
          android:layout_marginStart="@dimen/margin_4dp"
          android:textStyle="bold"
          android:textColor="@color/colorWhite"
          android:text="@string/clear_all"
          android:layout_marginEnd="@dimen/margin_24dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/icon_size_24dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_toolbar_bg" />


  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

