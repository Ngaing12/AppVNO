<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".ui.shop.beeCoin.BuyBeeCoinFailedFragment">


  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/freeBeeHomeBg">

    <ImageView
        android:id="@+id/img_toolbar_bg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/container_bottom_rounded"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar" />

    <View
        android:id="@+id/view_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:background="@drawable/container_three_rounded"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/view_container_end"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />



    <ImageView
        android:id="@+id/view_bg1"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:background="@drawable/buy_success_bg"
        app:layout_constraintLeft_toLeftOf="@id/view_container"
        app:layout_constraintRight_toRightOf="@id/view_container"
        app:layout_constraintTop_toTopOf="@id/view_container" />

    <ImageView
        android:id="@+id/img_coin1"
        android:layout_width="@dimen/icon_size_112dp"
        android:layout_height="@dimen/icon_size_112dp"
        android:src="@drawable/ic_rendered_coin"
        app:layout_constraintLeft_toLeftOf="@id/view_container"
        app:layout_constraintRight_toRightOf="@id/view_container"
        app:layout_constraintBottom_toBottomOf="@id/view_bg1"
        app:layout_constraintTop_toBottomOf="@id/view_bg1" />

    <View
        android:id="@id/card_1"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:background="@drawable/bee_coin_banner"
        app:layout_constraintLeft_toLeftOf="@id/view_container"
        app:layout_constraintRight_toRightOf="@id/view_container"
        app:layout_constraintTop_toBottomOf="@id/img_coin1" />

    <TextView
        android:id="@+id/tv_desc2"
        style="@style/FreeBeeHH3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:text="@string/bee_coins_balance"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@id/card_1"
        app:layout_constraintRight_toRightOf="@id/card_1"
        app:layout_constraintTop_toTopOf="@id/card_1" />

    <TextView
        android:id="@+id/tv_coinBalance"
        style="@style/FreeBeeUH1.Offset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1000.00"
        android:textAlignment="center"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@id/card_1"
        app:layout_constraintLeft_toLeftOf="@id/card_1"
        app:layout_constraintRight_toRightOf="@id/card_1"
        app:layout_constraintTop_toBottomOf="@id/tv_desc2" />

    <Button
        android:id="@+id/btn_buy"
        style="@style/FreeBeeButtonPrimary"
        android:layout_marginTop="@dimen/margin_32dp"
        android:text=" + Buy Bee Coins"
        android:drawableTint="@color/colorWhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_1" />

    <View
        android:id="@+id/view_container_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_24dp"
        app:layout_constraintTop_toBottomOf="@id/btn_buy" />


    <View
        android:id="@id/card_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:background="@drawable/container_rounded_dotted"
        app:layout_constraintLeft_toLeftOf="@id/view_container"
        app:layout_constraintRight_toRightOf="@id/view_container"
        app:layout_constraintBottom_toBottomOf="@id/view_card2_end"
        app:layout_constraintTop_toBottomOf="@id/view_container" />

    <TextView
        android:id="@+id/tv_desc3"
        style="@style/FreeBeeHP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/got_a_bee_coin_pin"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_24dp"
        app:layout_constraintLeft_toLeftOf="@id/card_2"
        app:layout_constraintRight_toRightOf="@id/card_2"
        app:layout_constraintTop_toTopOf="@id/card_2" />

    <ImageView
        android:layout_width="@dimen/icon_size_24dp"
        android:layout_height="@dimen/icon_size_24dp"
        android:src="@drawable/ic_info"
        android:layout_marginStart="@dimen/margin_8dp"
        app:layout_constraintLeft_toRightOf="@id/tv_desc3"
        app:layout_constraintTop_toTopOf="@id/tv_desc3"
        app:layout_constraintBottom_toBottomOf="@id/tv_desc3"/>

    <TextView
        android:id="@+id/tv_desc4"
        style="@style/FreeBeeHP3"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_height="wrap_content"
        android:text="@string/enter_the_pin_from_a_bee_coin_card"
        android:layout_marginTop="@dimen/margin_24dp"
        app:layout_constraintLeft_toLeftOf="@id/card_2"
        app:layout_constraintRight_toRightOf="@id/card_2"
        app:layout_constraintTop_toBottomOf="@id/tv_desc3" />



    <EditText
        android:id="@+id/edt_pin"
        style="@style/FreeBeeEditTextWhite"
        android:layout_width="0dp"
        android:textSize="@dimen/text_24sp"
        android:hint="@string/card_hint"
        android:inputType="number"
        android:textAlignment="center"
        android:paddingStart="@dimen/padding_16dp"
        android:paddingEnd="@dimen/padding_16dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_desc4"
        app:layout_constraintRight_toRightOf="@id/tv_desc4"
        app:layout_constraintTop_toBottomOf="@id/tv_desc4" />


    <TextView
        android:id="@+id/tv_submit"
        style="@style/FreeBeeHH3"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/submit_pin"
        android:layout_marginTop="@dimen/margin_24dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_desc4"
        app:layout_constraintRight_toRightOf="@id/tv_desc4"
        app:layout_constraintTop_toBottomOf="@id/edt_pin" />



    <ImageView
        android:id="@+id/img_help"
        android:visibility="gone"
        android:layout_width="@dimen/icon_size_24dp"
        android:layout_height="@dimen/icon_size_24dp"
        android:src="@drawable/ic_help"
        android:tint="@color/freeBeeCaramel"
        android:layout_marginEnd="@dimen/margin_8dp"
        app:layout_constraintRight_toLeftOf="@id/tv_needHelp"
        app:layout_constraintTop_toTopOf="@id/tv_needHelp"
        app:layout_constraintBottom_toBottomOf="@id/tv_needHelp"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_needHelp"
        style="@style/FreeBeeHH3"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/need_help"
        android:layout_marginTop="@dimen/margin_24dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_desc4"
        app:layout_constraintRight_toRightOf="@id/tv_desc4"
        app:layout_constraintTop_toBottomOf="@id/tv_submit" />

    <View
        android:id="@+id/view_card2_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_needHelp" />

    <View
        android:id="@+id/view_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_32dp"
        app:layout_constraintTop_toBottomOf="@id/view_card2_end"
        app:layout_constraintBottom_toBottomOf="parent" />


  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
