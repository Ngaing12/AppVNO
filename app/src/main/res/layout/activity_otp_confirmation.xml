    <ImageView
        android:id="@+id/img_back_otpConfirmation"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/temp_ic_arrow_back_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_logo_otpConfirmation"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/temp_sample_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_title_otpConfirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="This is your number "
        app:layout_constraintTop_toBottomOf="@id/img_logo_otpConfirmation" />

    <TextView
        android:id="@+id/tv_wrong_otpConfirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="Wrong number?"
        android:textColor="@color/colorHyperLinkPrimary"
        app:layout_constraintTop_toBottomOf="@id/tv_title_otpConfirmation" />


    <TextView
        android:id="@+id/tv_label_otpConfirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="98dp"
        android:gravity="center"
        android:text="Your 6 digit code"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_otpConfirmation" />

    <TextView
        android:id="@+id/tv_counter_otpConfirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="00:00"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_otpConfirmation" />


    <EditText
        android:id="@+id/edit_code_otpConfirmation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/temp_edit_text_white"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="6"
        android:ems="10"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_label_otpConfirmation"/>


