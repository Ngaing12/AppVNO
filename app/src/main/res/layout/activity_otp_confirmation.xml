        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="Resend via sms"
        android:textAllCaps="true"
        android:textColor="@color/colorHyperLinkPrimary"
        app:layout_constraintTop_toBottomOf="@id/edit_code_otpConfirmation" />


    <Button
        android:id="@+id/btn_submit_otpConfirmation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/temp_round_button_orange"
        android:text="Login"
        android:textColor="@color/colorTextOffset"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_resend_otpConfirmation" />


    <TextView
