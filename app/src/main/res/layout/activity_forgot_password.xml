<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".ui.password.forgotPassword.ForgotPasswordActivity">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/pre_login_bg">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar_pre_login" />

    <View
        android:id="@+id/container_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:background="@drawable/container_three_rounded"
        app:layout_constraintBottom_toBottomOf="@id/view_end"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />


    <TextView
        android:id="@+id/tv_desc1"
        style="@style/FreeBeeHP3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_32dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:layout_marginRight="@dimen/margin_32dp"
        android:text="@string/enter_your_mobile"
        app:layout_constraintLeft_toLeftOf="@id/container_content"
        app:layout_constraintRight_toRightOf="@id/container_content"
        app:layout_constraintTop_toTopOf="@id/container_content" />

    <TextView
        android:id="@+id/tv_desc2"
        style="@style/FreeBeeHP4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_32dp"
        android:text="@string/mobile_number"
        app:layout_constraintLeft_toLeftOf="@id/tv_desc1"
        app:layout_constraintRight_toRightOf="@id/tv_desc1"
        app:layout_constraintTop_toBottomOf="@id/tv_desc1" />

    <EditText
        android:id="@+id/edt_countryCode"
        style="@style/FreeBeeBaseEditText"
        android:layout_width="70dp"
        android:layout_margin="0dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:background="@drawable/edt_country_background"
        android:drawableEnd="@drawable/drop_down_arrow"
        android:focusable="false"
        android:paddingRight="@dimen/margin_16dp"
        android:text="@string/empty"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@id/tv_desc2"
        app:layout_constraintTop_toBottomOf="@id/tv_desc2" />

    <EditText
        android:id="@+id/edt_mobileNumber"
        style="@style/FreeBeeBaseEditText"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/margin_4dp"
        android:background="@drawable/edt_mobile_background"
        android:hint="@string/enter_mobile_number"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/edt_countryCode"
        app:layout_constraintLeft_toRightOf="@id/edt_countryCode"
        app:layout_constraintRight_toRightOf="@id/tv_desc2"
        app:layout_constraintTop_toTopOf="@id/edt_countryCode" />

    <Button
        android:id="@+id/btn_continue"
        style="@style/FreeBeeButtonPrimary"
        android:enabled="false"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:text="@string/continue_word"
        app:layout_constraintBottom_toTopOf="@id/view_end"
        app:layout_constraintLeft_toLeftOf="@id/container_content"
        app:layout_constraintRight_toRightOf="@id/container_content"
        app:layout_constraintTop_toBottomOf="@id/edt_mobileNumber"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/view_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_32dp"
        android:layout_marginBottom="@dimen/margin_32dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <ImageView
          android:id="@+id/img_blocker"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@color/colorBackgroundTransparent"
          android:visibility="gone"
          tools:ignore="ContentDescription" />

      <include layout="@layout/bottom_sheet_login" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <include
        android:id="@+id/touchUse_dialog"
        android:visibility="gone"
        layout="@layout/dialog_touch_id_use" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
