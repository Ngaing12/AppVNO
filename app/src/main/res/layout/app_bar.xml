<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/toolbarClose"
        android:layout_width="@dimen/icon_size_48dp"
        android:layout_height="@dimen/icon_size_48dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_keyboard_arrow"
        android:tint="@color/colorWhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolbarTitle"
        app:layout_constraintBottom_toBottomOf="@id/toolbarTitle"/>

    <TextView
        android:id="@+id/toolbarTitle"
        style="@style/FreeBeeUH2.Offset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_32dp"
        app:layout_goneMarginStart="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        app:layout_constraintLeft_toRightOf="@id/toolbarClose"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/toolbarNotif"
        android:layout_width="@dimen/icon_size_28dp"
        android:layout_height="@dimen/icon_size_28dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_notif_red"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolbarTitle"
        app:layout_constraintBottom_toBottomOf="@id/toolbarTitle"/>

</androidx.constraintlayout.widget.ConstraintLayout>