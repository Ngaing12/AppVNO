<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".ui.login.LoginActivity">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/pre_login_bg"
      android:focusable="true"
      android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/login_signup_logo"
        app:layout_constraintBottom_toTopOf="@id/tv_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/FreeBeeHH1.Offset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_32dp"
        android:text="@string/login"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/container_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_marginBottom="@dimen/margin_32dp"
        android:background="@drawable/pre_login_container"
        app:layout_constraintBottom_toBottomOf="parent">

      <TextView
          android:id="@+id/tv_desc1"
          style="@style/FreeBeeHP3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/margin_32dp"
          android:layout_marginTop="@dimen/margin_64dp"
          android:layout_marginEnd="@dimen/margin_32dp"
          android:text="@string/mobile_number"
          app:layout_constraintTop_toTopOf="@id/container_content" />

      <EditText
          android:id="@+id/edt_countryCode"
          style="@style/FreeBeeBaseEditText"
          android:layout_width="70dp"
          android:layout_margin="0dp"
          android:layout_marginTop="@dimen/margin_32dp"
          android:background="@drawable/edt_country_background"
          android:drawableEnd="@drawable/drop_down_arrow"
          android:focusable="false"
          android:paddingRight="@dimen/margin_16dp"
          android:text="@string/empty"
          android:textAlignment="center"
          app:layout_constraintLeft_toLeftOf="@id/tv_desc1"
          app:layout_constraintTop_toBottomOf="@id/tv_desc1" />

      <EditText
          android:id="@+id/edt_mobileNumber"
          style="@style/FreeBeeBaseEditText"
          android:layout_width="0dp"
          android:layout_marginStart="@dimen/margin_4dp"
          android:background="@drawable/edt_mobile_background"
          android:hint="@string/enter_mobile_number"
          android:inputType="number"
          android:textAlignment="center"
          app:layout_constraintBottom_toBottomOf="@id/edt_countryCode"
          app:layout_constraintLeft_toRightOf="@id/edt_countryCode"
          app:layout_constraintRight_toRightOf="@id/tv_desc1"
          app:layout_constraintTop_toTopOf="@id/edt_countryCode" />

      <TextView
          android:id="@+id/tv_desc2"
          style="@style/FreeBeeHP3"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin_16dp"
          android:text="@string/password"
          app:layout_constraintLeft_toLeftOf="@id/tv_desc1"
          app:layout_constraintRight_toRightOf="@id/tv_desc1"
          app:layout_constraintTop_toBottomOf="@id/edt_countryCode" />

      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/til_password"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:hintEnabled="false"
          app:layout_constraintLeft_toLeftOf="@id/tv_desc1"
          app:layout_constraintRight_toRightOf="@id/tv_desc1"
          app:layout_constraintTop_toBottomOf="@id/tv_desc2"
          app:passwordToggleEnabled="true"
          app:passwordToggleTint="@color/colorPrimaryDark">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_password"
            style="@style/FreeBeeBaseEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/freebee_edt_primary"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingStart="@dimen/margin_16dp"
            android:paddingEnd="@dimen/margin_16dp"
            app:boxBackgroundColor="@android:color/transparent" />

      </com.google.android.material.textfield.TextInputLayout>

      <TextView
          android:id="@+id/tv_forgotPassword"
          style="@style/FreeBeeHH3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin_8dp"
          android:text="@string/forgot_password_underline"
          android:textAlignment="center"
          app:layout_constraintLeft_toLeftOf="@id/tv_desc1"
          app:layout_constraintRight_toRightOf="@id/tv_desc1"
          app:layout_constraintTop_toBottomOf="@id/til_password" />

      <Button
          android:id="@+id/btn_login"
          style="@style/FreeBeeButtonPrimary"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin_32dp"
          android:text="@string/login"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@id/tv_forgotPassword" />

      <TextView
          android:id="@+id/tv_desc3"
          style="@style/FreeBeeHP3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin_16dp"
          android:text="@string/don_t_have_account_yet"
          android:textAlignment="center"
          app:layout_constraintBottom_toBottomOf="@id/tv_signUp"
          app:layout_constraintLeft_toLeftOf="@id/tv_desc1"
          app:layout_constraintRight_toRightOf="@id/tv_desc1"
          app:layout_constraintTop_toBottomOf="@id/btn_login" />

      <TextView
          android:id="@+id/tv_signUp"
          style="@style/FreeBeeHH3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin_8dp"
          android:layout_marginBottom="@dimen/margin_16dp"
          android:text="@string/sign_up_underline"
          android:textAlignment="center"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="@id/tv_desc1"
          app:layout_constraintRight_toRightOf="@id/tv_desc1"
          app:layout_constraintTop_toBottomOf="@id/tv_desc3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <ImageView
          android:id="@+id/img_blocker"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@color/colorBackgroundTransparent"
          android:visibility="gone"
          tools:ignore="ContentDescription" />

      <include layout="@layout/bottom_sheet_login" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
