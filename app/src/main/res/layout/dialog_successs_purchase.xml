<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/success_img_close"
        android:layout_width="@dimen/icon_size_24dp"
        android:layout_height="@dimen/icon_size_24dp"


        android:src="@drawable/ic_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/success_container_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_marginTop="@dimen/margin_8dp"
        android:background="@drawable/container_rounded"
        app:layout_constraintTop_toBottomOf="@id/success_img_close"
        app:layout_constraintBottom_toBottomOf="@id/success_bottomView" />


    <ImageView
        android:id="@+id/success_top_bg"
        android:src="@drawable/container_rounded_top"
        android:tint="@color/freeBeeYellow"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="@id/success_container_content"
        app:layout_constraintRight_toRightOf="@id/success_container_content"
        app:layout_constraintTop_toTopOf="@id/success_container_content" />


    <ImageView
        android:id="@+id/success_img_icon"
        android:layout_width="@dimen/icon_size_112dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_32dp"
        android:src="@drawable/ic_confirm_payment"
        app:layout_constraintRight_toRightOf="@id/success_top_bg"
        app:layout_constraintBottom_toBottomOf="@id/success_top_bg"
        app:layout_constraintTop_toTopOf="@id/success_top_bg" />

    <TextView
        android:id="@+id/success_tv_desc1"
        style="@style/FreeBeeUH2.Offset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_32dp"
        android:text="@string/success"
        app:layout_constraintBottom_toBottomOf="@id/success_top_bg"
        app:layout_constraintLeft_toLeftOf="@id/success_container_content"
        app:layout_constraintRight_toLeftOf="@id/success_img_icon"
        app:layout_constraintTop_toTopOf="@id/success_top_bg" />

    <TextView
        android:id="@+id/success_tv_subTitle"
        style="@style/FreeBeeHP1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/_500_bee_coins_have_been"
        app:layout_constraintBottom_toBottomOf="@id/success_top_bg"
        app:layout_constraintLeft_toLeftOf="@id/success_tv_desc1"
        app:layout_constraintRight_toLeftOf="@id/success_img_icon"
        app:layout_constraintTop_toBottomOf="@id/success_tv_desc1"
        app:layout_constraintVertical_bias="0.120000005" />

    <View
        android:id="@+id/success_card_1"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:background="@drawable/container_three_rounded"
        android:backgroundTint="@color/freeBeeHomeCardBackground1"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginLeft="@dimen/margin_32dp"
        android:layout_marginRight="@dimen/margin_32dp"
        app:layout_constraintRight_toRightOf="@id/success_container_content"
        app:layout_constraintLeft_toLeftOf="@id/success_container_content"
        app:layout_constraintTop_toBottomOf="@id/success_top_bg"/>


    <TextView
        android:id="@+id/success_tv_desc2"
        style="@style/FreeBeeHH3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_32dp"
        android:text="@string/your_new_bee_coins_balance"
        app:layout_constraintLeft_toLeftOf="@id/success_card_1"
        app:layout_constraintRight_toRightOf="@id/success_card_1"
        app:layout_constraintTop_toTopOf="@id/success_card_1" />

    <ImageView
        android:id="@+id/success_img_coin"
        android:src="@drawable/ic_coin_steel"
        android:layout_width="@dimen/icon_size_48dp"
        android:layout_height="@dimen/icon_size_48dp"
        android:layout_marginTop="@dimen/margin_8dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@id/success_tv_amount"
        app:layout_constraintBottom_toBottomOf="@id/success_tv_amount"
        app:layout_constraintLeft_toLeftOf="@id/success_card_1"
        app:layout_constraintRight_toLeftOf="@id/success_tv_amount"/>

    <TextView
        android:id="@+id/success_tv_amount"
        style="@style/FreeBeeUH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="45dp"
        android:text="600.00"
        android:textColor="#707070"
        android:layout_marginStart="@dimen/margin_8dp"
        app:layout_constraintLeft_toRightOf="@id/success_img_coin"
        app:layout_constraintRight_toRightOf="@id/success_card_1"
        app:layout_constraintTop_toBottomOf="@id/success_tv_desc2" />

    <View
        android:id="@+id/success_separator"
        android:layout_width="0dp"
        android:layout_height="@dimen/separator_view_size_5dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:background="@drawable/dash_line"
        app:layout_constraintLeft_toLeftOf="@id/success_container_content"
        app:layout_constraintRight_toRightOf="@id/success_container_content"
        app:layout_constraintTop_toBottomOf="@id/success_card_1" />

    <TextView
        android:id="@+id/success_tv_desc3"
        style="@style/FreeBeeHP2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_32dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:layout_marginRight="@dimen/margin_32dp"
        android:text="@string/you_can_now_buy_premium_call"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/success_separator" />

    <View
        android:id="@+id/success_bottomView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/freeBeeHomeCardBackground3"
        android:layout_marginTop="@dimen/margin_32dp"
        android:background="@drawable/container_bottom_rounded"
        app:layout_constraintBottom_toBottomOf="@id/success_tv_buy"
        app:layout_constraintLeft_toLeftOf="@id/success_container_content"
        app:layout_constraintRight_toRightOf="@id/success_container_content"
        app:layout_constraintTop_toBottomOf="@id/success_tv_desc3" />


    <TextView
        android:id="@+id/success_tv_buy"
        style="@style/FreeBeeHH2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_32dp"
        android:layout_marginRight="@dimen/margin_32dp"
        android:text="@string/buy_a_plan_now"
        android:textAlignment="center"
        android:paddingTop="@dimen/padding_16dp"
        android:paddingBottom="@dimen/padding_16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/success_bottomView" />





</androidx.constraintlayout.widget.ConstraintLayout>