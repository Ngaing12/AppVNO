<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".call.CallActivity">


    <ImageView
        android:id="@+id/img_back_call"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/temp_ic_arrow_back_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/btn_all_call"
        android:layout_width="100dp"
        android:layout_height="32dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@id/img_back_call"
        app:layout_constraintBottom_toBottomOf="@id/img_back_call"
        app:layout_constraintRight_toLeftOf="@id/btn_missed_call"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="all"
        android:background="@drawable/temp_button_call_left_white"/>

    <Button
        android:id="@+id/btn_missed_call"
        android:layout_width="100dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="@id/img_back_call"
        app:layout_constraintBottom_toBottomOf="@id/img_back_call"
        app:layout_constraintLeft_toRightOf="@id/btn_all_call"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Missed"
        android:textColor="@color/colorWhite"
        android:background="@drawable/temp_button_call_right_green"/>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/img_back_call"
        app:layout_constraintBottom_toBottomOf="@id/img_back_call"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/temp_ic_search_black_24dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>