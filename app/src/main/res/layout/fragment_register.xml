<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_title_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make sure you can recieve SMS to this number so that we can send you a code."
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"/>

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinner_location_register"
            android:layout_width="match_parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_height="50dp"
            android:hint="Country"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title_register"/>

        <LinearLayout
            android:id="@+id/container_phone_number_register"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/temp_edit_text_white"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="@id/spinner_location_register"
            app:layout_constraintRight_toRightOf="@id/spinner_location_register"
            app:layout_constraintTop_toBottomOf="@id/spinner_location_register">

            <TextView
                android:id="@+id/tv_post_number_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="+63"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@color/colorTextNormal"/>

            <EditText
                android:id="@+id/edt_phone_number_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:hint="Phone number"
                android:inputType="number"
                android:maxLength="10"
                android:background="@color/colorWhite"/>

        </LinearLayout>


        <Button
            android:id="@+id/btn_register_register"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/temp_round_button_orange"
            android:text="Register"
            android:textColor="@color/colorTextOffset"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/spinner_location_register"
            app:layout_constraintRight_toRightOf="@id/spinner_location_register"
            app:layout_constraintTop_toBottomOf="@id/container_phone_number_register" />


        <TextView
            android:id="@+id/tv_signin_dec_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an Account? "
            android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@id/btn_register_register"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_signin_register"/>

        <TextView
            android:id="@+id/tv_signin_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temp_sign_in"
            android:textColor="@color/colorHyperLinkPrimary"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_signin_dec_login"
            app:layout_constraintTop_toTopOf="@id/tv_signin_dec_login"/>




    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>