<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".ui.shop.beeCoin.BuyBeeCoinFragment">


  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/freeBeeHomeBg">

    <ImageView
        android:id="@+id/img_toolbar_bg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/container_bottom_rounded"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar" />

    <View
        android:id="@+id/view_container"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:background="@drawable/container_three_rounded"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />


    <ImageView
        android:id="@+id/img_coin1"
        android:layout_width="@dimen/icon_size_76dp"
        android:layout_height="@dimen/icon_size_76dp"
        android:layout_marginLeft="@dimen/margin_32dp"
        android:src="@drawable/ic_coin_gold"
        app:layout_constraintBottom_toBottomOf="@id/view_container"
        app:layout_constraintLeft_toLeftOf="@id/view_container"
        app:layout_constraintTop_toTopOf="@id/view_container" />

    <TextView
        android:id="@+id/tv_contentTitle"
        style="@style/FreeBeeHH2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:text="@string/_1000_bee_coins"
        android:textColor="@android:color/black"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/img_coin1"
        app:layout_constraintRight_toRightOf="@id/view_container"
        app:layout_constraintBottom_toTopOf="@id/tv_desc1"
        app:layout_constraintTop_toTopOf="@id/img_coin1" />

    <TextView
        android:id="@+id/tv_desc1"
        style="@style/FreeBeeHP1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="USD 10.00"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="@id/tv_contentTitle"
        app:layout_constraintRight_toRightOf="@id/view_container"
        app:layout_constraintTop_toBottomOf="@id/tv_contentTitle"
        app:layout_constraintBottom_toBottomOf="@id/img_coin1"/>

    <TextView
        android:id="@+id/tv_desc2"
        style="@style/FreeBeeHH2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/how_to_use"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_container" />

    <!-- 1 -->
    <TextView
        android:id="@+id/tv_num1"
        style="@style/FreeBeeHP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_48dp"
        android:text="1."
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_desc2" />

    <TextView
        android:id="@+id/tv_desc3"
        style="@style/FreeBeeHP2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_48dp"
        android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna"
        app:layout_constraintLeft_toRightOf="@id/tv_num1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_num1" />


    <!-- 2 -->
    <TextView
        android:id="@+id/tv_num2"
        style="@style/FreeBeeHP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_48dp"
        android:text="2."
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_desc3" />

    <TextView
        android:id="@+id/tv_desc4"
        style="@style/FreeBeeHP2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_48dp"
        android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna"
        app:layout_constraintLeft_toRightOf="@id/tv_num2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_num2" />

    <!-- 3 -->
    <TextView
        android:id="@+id/tv_num3"
        style="@style/FreeBeeHP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_48dp"
        android:text="2."
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_desc4" />

    <TextView
        android:id="@+id/tv_desc5"
        style="@style/FreeBeeHP2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_48dp"
        android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna"
        app:layout_constraintLeft_toRightOf="@id/tv_num3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_num3" />

    <!-- 4 -->
    <TextView
        android:id="@+id/tv_num4"
        style="@style/FreeBeeHP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_48dp"
        android:text="2."
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_desc5" />

    <TextView
        android:id="@+id/tv_desc6"
        style="@style/FreeBeeHP2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_48dp"
        android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna"
        app:layout_constraintLeft_toRightOf="@id/tv_num4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_num4" />



    <Button
        android:id="@+id/btn_buy"
        style="@style/FreeBeeButtonPrimary"
        android:layout_marginTop="@dimen/margin_64dp"
        android:text="@string/buy_bee_coins"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_desc6" />

    <Button
        android:id="@+id/btn_cancel"
        style="@style/FreeBeeButtonSecondary"
        android:layout_marginTop="@dimen/margin_16dp"
        android:text="@string/cancel"
        app:layout_constraintLeft_toLeftOf="@id/btn_buy"
        app:layout_constraintRight_toRightOf="@id/btn_buy"
        app:layout_constraintTop_toBottomOf="@id/btn_buy" />

    <View
        android:id="@+id/view_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_cancel" />


  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
