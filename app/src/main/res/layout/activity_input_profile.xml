<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.InputProfileActivity">

    <ImageView
        android:id="@+id/img_back_inputProfile"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/temp_ic_arrow_back_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_title_inputProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:gravity="center"
        android:text="Complete Information"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@id/img_back_inputProfile"
        app:layout_constraintTop_toTopOf="@id/img_back_inputProfile"
        app:layout_constraintBottom_toBottomOf="@id/img_back_inputProfile"/>


    <EditText
        android:id="@+id/edt_firstName_inputProfile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/temp_edit_text_white"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="64dp"
        android:padding="8dp"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:ems="10"
        app:layout_constraintTop_toBottomOf="@id/img_back_inputProfile"/>

    <EditText
        android:id="@+id/edt_lastName_inputProfile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/temp_edit_text_white"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:ems="10"
        app:layout_constraintTop_toBottomOf="@id/edt_firstName_inputProfile"/>

    <TextView
        android:id="@+id/tv_date_inputProfile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/temp_edit_text_white"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:hint="Date"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/temp_ic_date_range_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/edt_lastName_inputProfile"/>

    <EditText
        android:id="@+id/edt_gender_inputProfile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/temp_edit_text_white"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:hint="Gender"
        android:inputType="textPersonName"
        android:ems="10"
        app:layout_constraintTop_toBottomOf="@id/tv_date_inputProfile"/>


    <Button
        android:id="@+id/btn_continue_inputProfile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/temp_round_button_orange"
        android:text="Continue"
        android:textColor="@color/colorTextOffset"
        android:textStyle="bold"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_view_privacy_desc_inputProfile"
        tools:layout_editor_absoluteX="32dp" />


    <TextView
        android:id="@+id/tv_view_privacy_desc_inputProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="\@2020 AppVNO."
        android:textAlignment="center"
        android:textColor="@color/colorTextNormal"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_view_privacy_inputProfile"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_view_privacy_inputProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/temp_privacy_policy"
        android:textAlignment="center"
        android:textAppearance="@style/Widget.AppCompat.Spinner.Underlined"
        android:textColor="@color/colorTextNormal"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_view_privacy_desc_inputProfile"
        app:layout_constraintTop_toTopOf="@id/tv_view_privacy_desc_inputProfile" />



</androidx.constraintlayout.widget.ConstraintLayout>