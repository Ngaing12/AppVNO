<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/profile_container_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:background="@drawable/container_rounded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/profile_end" />

    <ImageView
        android:id="@+id/profile_img_close"
        android:layout_width="@dimen/icon_size_24dp"
        android:layout_height="@dimen/icon_size_24dp"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginRight="@dimen/margin_24dp"
        android:src="@drawable/ic_close"
        app:layout_constraintRight_toRightOf="@id/profile_container_content"
        app:layout_constraintTop_toTopOf="@id/profile_container_content" />

    <ImageView
        android:id="@+id/profile_img_icon"
        android:layout_width="@dimen/icon_size_160dp"
        android:layout_height="@dimen/icon_size_160dp"
        android:scaleType="fitXY"
        android:src="@drawable/success"
        app:layout_constraintLeft_toLeftOf="@id/profile_container_content"
        app:layout_constraintRight_toRightOf="@id/profile_container_content"
        app:layout_constraintTop_toBottomOf="@id/profile_img_close" />

    <ImageView
        android:id="@+id/profile_img_help"
        android:layout_width="@dimen/icon_size_32dp"
        android:layout_height="@dimen/icon_size_32dp"
        android:src="@drawable/ic_profile_lock"
        android:tint="@color/freeBeeCaramel"
        android:layout_marginEnd="@dimen/margin_8dp"
        app:layout_constraintRight_toLeftOf="@id/profile_tv_needHelp"
        app:layout_constraintTop_toTopOf="@id/profile_tv_needHelp"
        app:layout_constraintBottom_toBottomOf="@id/profile_tv_needHelp"/>

    <TextView
        android:id="@+id/profile_tv_needHelp"
        style="@style/FreeBeeHH3"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/password_has_been_changed"
        android:layout_marginTop="@dimen/margin_24dp"
        app:layout_constraintLeft_toLeftOf="@id/profile_container_content"
        app:layout_constraintRight_toRightOf="@id/profile_container_content"
        app:layout_constraintTop_toBottomOf="@id/profile_img_icon" />

    <View
        android:id="@+id/profile_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_32dp"
        app:layout_constraintTop_toBottomOf="@id/profile_tv_needHelp"/>


</androidx.constraintlayout.widget.ConstraintLayout>