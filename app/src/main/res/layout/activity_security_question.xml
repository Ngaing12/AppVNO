<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".ui.securityQuestion.SecurityQuestionActivity">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/pre_login_bg">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar_pre_login" />

    <View
        android:id="@+id/container_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_marginBottom="@dimen/margin_32dp"
        android:background="@drawable/container_rounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/tv_contentTitle"
        style="@style/FreeBeeUH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_32dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:layout_marginEnd="@dimen/margin_32dp"
        android:text="@string/set_up_security_question"
        android:textColor="@color/colorBlack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/container_content" />

    <TextView
        android:id="@+id/tv_desc1"
        style="@style/FreeBeeHP2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_32dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:layout_marginEnd="@dimen/margin_32dp"
        android:text="@string/to_make_your_account"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@id/container_content"
        app:layout_constraintRight_toRightOf="@id/container_content"
        app:layout_constraintTop_toBottomOf="@id/tv_contentTitle" />

    <TextView
        android:id="@+id/tv_desc2"
        style="@style/FreeBeeHP4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_32dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:layout_marginRight="@dimen/margin_32dp"
        android:text="@string/security_question"
        app:layout_constraintLeft_toLeftOf="@id/container_content"
        app:layout_constraintRight_toRightOf="@id/container_content"
        app:layout_constraintTop_toBottomOf="@id/tv_desc1" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_question"
        style="@style/FreeBeeBaseSpinner"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_desc1"
        app:layout_constraintRight_toRightOf="@id/tv_desc1"
        app:layout_constraintTop_toBottomOf="@id/tv_desc2" />

    <TextView
        android:id="@+id/tv_desc3"
        style="@style/FreeBeeHP4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:text="@string/security_question_answer"
        app:layout_constraintLeft_toLeftOf="@id/tv_desc1"
        app:layout_constraintRight_toRightOf="@id/tv_desc1"
        app:layout_constraintTop_toBottomOf="@id/spinner_question" />

    <EditText
        android:id="@+id/edt_answer"
        style="@style/FreeBeeEditText"
        android:layout_width="0dp"
        android:hint="@string/enter_answer_to_your_security_question"
        android:inputType="text"
        android:paddingStart="@dimen/padding_16dp"
        android:paddingEnd="@dimen/padding_16dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_desc1"
        app:layout_constraintRight_toRightOf="@id/tv_desc1"
        app:layout_constraintTop_toBottomOf="@id/tv_desc3" />

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/icon_size_160dp"
        android:layout_height="@dimen/icon_size_160dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_security_password"
        app:layout_constraintLeft_toLeftOf="@id/container_content"
        app:layout_constraintRight_toRightOf="@id/container_content"
        app:layout_constraintTop_toBottomOf="@id/edt_answer" />

    <Button
        android:id="@+id/btn_continue"
        style="@style/FreeBeeButtonPrimary"
        android:layout_marginTop="@dimen/margin_32dp"
        android:layout_marginBottom="@dimen/margin_32dp"
        android:enabled="false"
        android:text="@string/continue_word"
        app:layout_constraintBottom_toBottomOf="@id/container_content"
        app:layout_constraintLeft_toLeftOf="@id/tv_desc1"
        app:layout_constraintRight_toRightOf="@id/tv_desc1"
        app:layout_constraintTop_toBottomOf="@id/img_icon" />


  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>