<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".termsCondition.TermsConditionActivity">

    <ImageView
        android:id="@+id/img_back_termsCondition"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/temp_ic_arrow_back_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_title_termsCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:gravity="center"
        android:text="Terms and Conditions"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@id/img_back_termsCondition"
        app:layout_constraintTop_toTopOf="@id/img_back_termsCondition"
        app:layout_constraintBottom_toBottomOf="@id/img_back_termsCondition"/>

    <TextView
        android:id="@+id/tv_desc1_termsCondition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/temp_terms_and_condition_text"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/switch_term_termsCondition"
        app:layout_constraintTop_toBottomOf="@id/img_back_termsCondition"/>


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_term_termsCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toTopOf="@id/tv_desc1_termsCondition"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/divider_1_termsCondition"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorTextNormal"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_desc1_termsCondition"/>

    <TextView
        android:id="@+id/tv_desc2_termsCondition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="To receive the best ad-sponsored experience. I allow Free Bee to:"
        android:textSize="12sp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/switch_term_termsCondition"
        app:layout_constraintTop_toBottomOf="@id/divider_1_termsCondition"/>

    <TextView
        android:id="@+id/tv_desc3_termsCondition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send relevant promotional materials via SMS and email and user my data for analytics practices to improve user experience and loyalty programs."
        android:layout_marginEnd="12dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/switch_term_termsCondition"
        app:layout_constraintTop_toBottomOf="@id/tv_desc2_termsCondition"/>


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_analytic_termsCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toTopOf="@id/tv_desc3_termsCondition"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/tv_desc4_termsCondition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="You may modify your privacy policy preference or opt out of service anytime. Simply send us and email at help \@freebeecalls.com "
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_agree_termsCondition"/>

    <Button
        android:id="@+id/btn_agree_termsCondition"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/temp_round_button_orange"
        android:text="I Agree"
        android:textColor="@color/colorTextOffset"
        android:textStyle="bold"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_view_privacy_desc_termsCondition"
        tools:layout_editor_absoluteX="32dp" />



    <TextView
        android:id="@+id/tv_view_privacy_desc_termsCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="\@2020 AppVNO."
        android:textAlignment="center"
        android:textColor="@color/colorTextNormal"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_view_privacy_termsCondition"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_view_privacy_termsCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/temp_privacy_policy"
        android:textAlignment="center"
        android:textAppearance="@style/Widget.AppCompat.Spinner.Underlined"
        android:textColor="@color/colorTextNormal"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_view_privacy_desc_termsCondition"
        app:layout_constraintTop_toTopOf="@id/tv_view_privacy_desc_termsCondition" />


</androidx.constraintlayout.widget.ConstraintLayout>