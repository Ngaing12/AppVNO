<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="background">@color/colorBackgroundPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/temp_logo2</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- TextView -->
    <style name="TextViewXXL">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextNormal</item>
        <item name="android:textSize">@dimen/text_32sp</item>
    </style>
    <style name="TextViewXXL.Offset">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextOffset</item>
        <item name="android:textSize">@dimen/text_32sp</item>
    </style>
    <style name="TextViewXL">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTextNormal</item>
        <item name="android:textSize">@dimen/text_24sp</item>
    </style>
    <style name="TextViewXL.Offset">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTextOffset</item>
        <item name="android:textSize">@dimen/text_24sp</item>
    </style>
    <style name="TextViewL">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTextNormal</item>
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>
    <style name="TextViewL.Offset">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTextOffset</item>
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>
    <style name="TextViewM">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTextNormal</item>
        <item name="android:textSize">@dimen/text_14sp</item>
    </style>
    <style name="TextViewM.Offset">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTextOffset</item>
        <item name="android:textSize">@dimen/text_14sp</item>
    </style>
    <style name="TextViewS">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTextNormal</item>
        <item name="android:textSize">@dimen/text_12sp</item>
    </style>
    <style name="TextViewS.Offset">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTextOffset</item>
        <item name="android:textSize">@dimen/text_12sp</item>
    </style>

    <!-- Button -->
    <style name="ButtonPrimary">
        <item name="android:layout_height">@dimen/button_primary_height</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:backgroundTint">@color/colorButtonPrimary</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextOffset</item>
    </style>

    <!-- Edit Text   -->
    <style name="EditTextPrimary">
        <item name="android:layout_height">@dimen/edit_text_primary_height</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:background">@drawable/edit_text_rounded</item>
        <item name="android:textColor">@color/colorTextNormal</item>
        <item name="android:textColorHint">@color/colorHintPrimary</item>
        <item name="android:padding">@dimen/margin_8dp</item>
        <item name="android:ems">10</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="BottomNavigationHome">
        <item name="android:layout_height">@dimen/bottom_navigation_height</item>
        <item name="android:background">@drawable/temp_nav_background_white</item>
        <item name="itemIconTint">@drawable/tem_nav_item_color</item>
        <item name="itemTextColor">@drawable/tem_nav_item_color</item>
    </style>


    <!-- Free Bee TextView -->
    <style name="FreeBeeUH1">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/freeBeeHoney</item>
        <item name="android:textSize">@dimen/text_24sp</item>
    </style>
    <style name="FreeBeeUH1.Offset">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="FreeBeeUH2">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/freeBeeHoney</item>
        <item name="android:textSize">@dimen/text_20sp</item>
    </style>
    <style name="FreeBeeUH2.Offset">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="FreeBeeUH3">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/freeBeeHoney</item>
        <item name="android:textSize">@dimen/text_18sp</item>
    </style>

    <style name="FreeBeeHH1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/freeBeeCaramel</item>
        <item name="android:textSize">@dimen/text_24sp</item>
    </style>
    <style name="FreeBeeHH1.Offset">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="FreeBeeHH2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/freeBeeCaramel</item>
        <item name="android:textSize">@dimen/text_20sp</item>
    </style>
    <style name="FreeBeeHH2.Offset">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="FreeBeeHH3">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/freeBeeCaramel</item>
        <item name="android:textSize">@dimen/text_18sp</item>
    </style>
    <style name="FreeBeeHH3.Offset">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="FreeBeeHP1">
        <item name="android:textColor">@color/freeBeeCaramel</item>
        <item name="android:textSize">@dimen/text_20sp</item>
    </style>

    <style name="FreeBeeHP2">
        <item name="android:textColor">@color/freeBeeCaramel</item>
        <item name="android:textSize">@dimen/text_18sp</item>
    </style>

    <style name="FreeBeeHP3">
        <item name="android:textColor">@color/freeBeeCaramel</item>
        <item name="android:textSize">@dimen/margin_16dp</item>
    </style>

    <style name="FreeBeeHP4">
        <item name="android:textColor">@color/freeBeeCaramel</item>
        <item name="android:textSize">@dimen/text_14sp</item>
    </style>

    <!-- Button -->
    <style name="FreeBeeButtonPrimary" parent="FreeBeeHH3">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_primary_height</item>
        <item name="android:background">@drawable/freebee_button_primary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FreeBeeButtonSecondary" parent="FreeBeeHH3">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_primary_height</item>
        <item name="android:background">@drawable/freebee_button_secondary</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="FreeBeeButtonTertiarySmall" parent="FreeBeeHP4">
        <item name="android:layout_width">@dimen/button_width_small</item>
        <item name="android:layout_height">@dimen/button_tertiary_height_small</item>
        <item name="android:background">@drawable/freebee_button_tertiary</item>
    </style>

    <!-- Edit Text -->
    <style name="FreeBeeBaseEditText" parent="FreeBeeHP4">
        <item name="android:textColor">@color/freeBeeCaramel</item>
        <item name="android:layout_height">@dimen/edit_text_primary_height</item>
    </style>

    <style name="FreeBeeEditText" parent="FreeBeeBaseEditText">
        <item name="android:background">@drawable/freebee_edt_primary</item>
    </style>
    <style name="FreeBeeEditTextWhite" parent="FreeBeeBaseEditText">
        <item name="android:background">@drawable/freebee_edt_tertiary</item>
    </style>

    <!-- Spinner -->
    <style name="FreeBeeBaseSpinner" parent="FreeBeeHP4">
        <item name="android:layout_height">@dimen/edit_text_primary_height</item>
        <item name="android:textColor">@color/colorTextNormal</item>
        <item name="android:popupBackground">@color/freeBeeSpinnerPrimary</item>
        <item name="android:background">@drawable/freebee_spinner</item>
    </style>

    <!-- Radio Button -->
    <style name="FreeBeeRadioButton" parent="FreeBeeHP3">
        <item name="android:textColor">@color/colorTextNormal</item>
        <item name="android:button">@drawable/freebee_radio</item>
        <item name="android:paddingStart">@dimen/padding_4dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_8dp</item>
    </style>

    <style name="FreeBeeRadioButton2" parent="FreeBeeHP3">
        <item name="android:button">@drawable/freebee_radio2</item>
        <item name="android:paddingStart">@dimen/padding_4dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_8dp</item>
    </style>


    <!-- Checkbox -->
    <style name="FreeBeeCheckBox" parent="FreeBeeHP3">
        <item name="android:textColor">@color/colorTextNormal</item>
        <item name="android:paddingStart">@dimen/padding_16dp</item>
        <item name="android:paddingEnd">@dimen/padding_16dp</item>
        <item name="android:button">@drawable/freebee_checkbox</item>
    </style>

    <!-- Cards -->
    <style name="FreeBeeCard1">
        <item name="android:maxWidth">@dimen/card_width</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/card_caramel</item>
    </style>

    <style name="FreeBeeCard2">
        <item name="android:maxWidth">@dimen/card_width</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/card_outline</item>
    </style>

    <style name="FreeBeeCard3">
        <item name="android:background">@drawable/container_rounded</item>
    </style>


    <!-- Bottom Navigation -->
    <style name="FreeBeeNavigationHome">
        <item name="android:layout_height">@dimen/bottom_navigation_height</item>
        <item name="android:background">@drawable/freebee_nav_background</item>
        <item name="itemIconTint">@drawable/freebee_nav_item_color</item>
        <item name="itemTextColor">@drawable/freebee_nav_text_color</item>
    </style>

</resources>
